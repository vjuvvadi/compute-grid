<!DOCTYPE cache-config SYSTEM "cache-config.dtd">

<cache-config>

    <caching-scheme-mapping>
        <cache-mapping>
            <cache-name>compute-grid</cache-name>
            <scheme-name>compute-grid-scheme</scheme-name>
        </cache-mapping>
        <cache-mapping>
            <cache-name>price-array-grid</cache-name>
            <scheme-name>price-array-grid-scheme</scheme-name>
        </cache-mapping>
    </caching-scheme-mapping>


    <caching-schemes>
        <distributed-scheme>
            <scheme-name>price-array-grid-scheme</scheme-name>
            <service-name>price-array-grid-service</service-name>
            <thread-count>5</thread-count>
            <partition-count>1021</partition-count>
            <backing-map-scheme>
                <local-scheme>
                    <scheme-ref>dist-unlimited-binary-backing-map</scheme-ref>
                </local-scheme>
            </backing-map-scheme>
            <autostart>true</autostart>
        </distributed-scheme>

        <distributed-scheme>
            <scheme-name>compute-grid-scheme</scheme-name>
            <service-name>compute-grid-service</service-name>
            <thread-count>5</thread-count>
            <partition-count>1021</partition-count>
            <backing-map-scheme>
                <local-scheme>
                    <scheme-ref>dist-unlimited-binary-backing-map</scheme-ref>
                </local-scheme>
            </backing-map-scheme>
            <autostart>true</autostart>
        </distributed-scheme>


        <proxy-scheme>
            <service-name>ComputeGridProxyService</service-name>
            <acceptor-config>
                <tcp-acceptor>
                    <local-address>
                        <address>localhost</address>
                        <port>9099</port>
                    </local-address>
                </tcp-acceptor>
            </acceptor-config>
            <thread-count>2</thread-count>
            <autostart>true</autostart>
           <!-- these are enabled by default - easy to disable with this-->
            <proxy-config>
                <cache-service-proxy>
                    <enabled>true</enabled>
                </cache-service-proxy>
                <invocation-service-proxy>
                    <enabled>true</enabled>
                </invocation-service-proxy>
            </proxy-config>
        </proxy-scheme>

        <local-scheme>
            <scheme-name>dist-unlimited-binary-backing-map</scheme-name>
            <unit-calculator>BINARY</unit-calculator>
            <unit-factor>1048576</unit-factor>
            <expiry-delay>0</expiry-delay>
        </local-scheme>



    </caching-schemes>
</cache-config>