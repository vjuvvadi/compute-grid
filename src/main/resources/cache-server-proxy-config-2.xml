<!DOCTYPE cache-config SYSTEM "cache-config.dtd">

<cache-config>

    <caching-scheme-mapping>
        <cache-mapping>
            <cache-name>compute-grid</cache-name>
            <scheme-name>unlimited-dist-default-scheme</scheme-name>
        </cache-mapping>
    </caching-scheme-mapping>


    <caching-schemes>
        <distributed-scheme>
            <scheme-name>unlimited-dist-default-scheme</scheme-name>
            <backing-map-scheme>
                <local-scheme/>
            </backing-map-scheme>
            <autostart>true</autostart>
        </distributed-scheme>


        <proxy-scheme>
            <service-name>ComputeGridProxyService</service-name>
            <acceptor-config>
                <tcp-acceptor>
                    <local-address>
                        <address>localhost</address>
                        <port>9098</port>
                    </local-address>
                </tcp-acceptor>
            </acceptor-config>
            <thread-count>2</thread-count>
            <autostart>true</autostart>
           <!-- these are enabled by default - easy to disable with this-->
            <proxy-config>
                <cache-service-proxy>
                    <enabled>true</enabled>
                </cache-service-proxy>
                <invocation-service-proxy>
                    <enabled>true</enabled>
                </invocation-service-proxy>
            </proxy-config>
        </proxy-scheme>


    </caching-schemes>
</cache-config>